@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row login__container">
    <div class="col-md-3">
    </div>
    <div class="col-md-6 login__container--content">
        <section>
            <form id="account" method="post">
                <h1 class="service-name">Wit One Bot</h1>
                <hr />
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control login__input" />
                    <div class="login--underline"></div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control login__input" />
                    <div class="login--underline"></div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary login--button">Login</button>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-3">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
